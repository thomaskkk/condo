{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Morador</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <th>Cpf</th>
                <td>{{ entity.cpf }}</td>
            </tr>
            <tr>
                <th>Rg</th>
                <td>{{ entity.rg }}</td>
            </tr>
            <tr>
                <th>Datanascimento</th>
                <td>{{ entity.dataNascimento|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ entity.sexo }}</td>
            </tr>
            <tr>
                <th>Telefonecelular</th>
                <td>{{ entity.telefoneCelular }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ entity.foto }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('morador') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('morador_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
